{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "jsRules": {},
  "rules": {
    "prettier": [
      true,
      {
        "semi": ["error", "always-multiline"]
      }
    ],
    "no-console": false,
    "object-literal-sort-keys": false
  },
  "rulesDirectory": ["tslint-plugin-prettier"],
  "linterOptions": {
    "exclude": ["serverless/*.js"]
}
}